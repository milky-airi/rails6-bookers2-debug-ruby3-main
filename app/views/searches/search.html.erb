<table class="table">

  <% if @range == "User" %>
    <h2>Users search for "<%= @word %>"</h2>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end  %>

    <% else %>
     <h2>Books search for "<%= @word %>"</h2>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(50,50) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end  %>

  <% end %>

</table>
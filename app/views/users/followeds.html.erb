<h2>Follower Users</h2>

<% if @users.blank? %>
  <p>ユーザーはいません</p>
<% else %>
  <% @users.each do |user| %>
    <table class="table">
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followers.count %></td>
        <td>フォロワー数: <%= user.followeds.count %></td>
        <td><%= link_to "Show", user_path(user) %></td>
        </tr>
    </table>
  <% end %>
<% end %>